<h4>Add a branch:</h4>                
<%= form_for([@merchant, @merchant.branches.build]) do |f| %>
  <div class="field">                 
    <%= f.label :name %><br />
    <%= f.text_field :name%>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= label_tag :city %><br />
    <%= select_tag :city, options_from_collection_for_select(@cities, 'id', 'name') %>
  </div>
  <div class="field">
    <%= f.label :contact_number %><br />
    <%= f.text_field :contact_number %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
